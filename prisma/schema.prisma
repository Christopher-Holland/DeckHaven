// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for Stack-Auth integration
model User {
  id            String   @id @default(cuid())
  stackUserId   String   @unique // Stack-Auth user ID
  email         String?  @unique
  name          String?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  collections   Collection[]
  wishlists     Wishlist[]
  decks         Deck[]
  trackedSets   TrackedSet[]
  binders       Binder[]

  @@map("users")
}

// Card collection tracking
model Collection {
  id          String   @id @default(cuid())
  userId      String
  cardId      String   // Scryfall card ID
  quantity    Int      @default(1)
  condition   String?  // e.g., "mint", "near_mint", "played", "damaged"
  language    String?  // e.g., "en", "ja", "es"
  isFoil      Boolean  @default(false)
  tags        String?  // Comma-separated tags (e.g., "Trades, Favorites, Set Binder")
  notes       String?  // User notes about this card
  purchasePrice Decimal? // Purchase price if tracked
  purchaseDate DateTime? // Purchase date if tracked
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@map("collections")
}

// Wishlist items
model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  cardId    String   // Scryfall card ID
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@map("wishlists")
}

// Decks
model Deck {
  id        String   @id @default(cuid())
  userId    String
  name      String
  game      String   // mtg, ptcg, ytcg
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  deckCards DeckCard[]

  @@map("decks")
}

// Cards in decks
model DeckCard {
  id        String   @id @default(cuid())
  deckId    String
  cardId    String   // Scryfall card ID
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deck Deck @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@unique([deckId, cardId])
  @@map("deck_cards")
}

// User-tracked sets (favorited/tracked sets)
model TrackedSet {
  id        String   @id @default(cuid())
  userId    String
  setId     String   // Scryfall set code (e.g., "m21", "neo")
  isFavorite Boolean  @default(false)
  notes     String?  // User notes about the set
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, setId])
  @@map("tracked_sets")
}

// Binders for organizing cards
model Binder {
  id          String      @id @default(cuid())
  userId      String
  name        String
  description String?
  color       String?     // Cover color (hex)
  spineColor  String?     // Spine color (hex)
  pageColor   String?     // Page background color (hex)
  size        String?     // for 3x3 or 4x4 grid layouts
  game        String?    // "all" (favorites), "mtg", "pokemon", "yugioh" - null means favorites/all games
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  binderCards BinderCard[]

  @@map("binders")
}

// Cards in binders
model BinderCard {
  id        String   @id @default(cuid())
  binderId String
  cardId   String   // Scryfall card ID
  quantity Int      @default(1)
  slotNumber Int?   // Global slot index (0-based) - position across all pages, adjusts with binder size
  notes    String?  // User notes about this specific card
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  binder Binder @relation(fields: [binderId], references: [id], onDelete: Cascade)

  @@unique([binderId, cardId])
  @@map("binder_cards")
}

